{
  "name": "token-color-mapper",
  "version": "1.0.0",
  "description": "Token Color Mapper - Standalone Windows Desktop App",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.tokencolormapper.app",
    "productName": "Token Color Mapper",
    "directories": { "output": "dist" },
    "win": {
      "target": ["nsis", "portable"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "three": "^0.128.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
